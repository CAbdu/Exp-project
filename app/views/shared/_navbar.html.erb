<div class ="my-navbar">
  <%= link_to root_path, class: "navbar-logo" do %>
    <%= image_tag "iconlvlup.png" %>
  <% end %>
  <div class="navbar-search">
    <form action="" class= "navbar-form">
      <input type="text" class="navbar-form-input" placeholder="Rechercher">
      <!-- <button type="GO" class="navbar-form-btn">
        <i class="fa fa-search"></i>
      </button> -->
    </form>
  </div>

  <span class="navbar-title">Level Up</span>


  <div class= "navbar-right">
    <% if user_signed_in? %>

      <%= link_to "#", class: "navbar-item navbar-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-red">3</div>
        </div>
    <% end %>

    <div class="navbar-item">
      <div class="dropdown">
        <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fas fa-comment-alt"></i> <%= t(".posts", default: "Posts") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i> <%= t(".sign out", default: "Deconnection")%>
              <% end %>
            </li>

          </ul>
        </div>
      </div>
    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-item navbar-link" %>
    <% end %>
  </div>








  </div>




















